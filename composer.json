{
	"name": "kumuwai/daily",
	"description": "Daily programming and development practice",
	"keywords": ["laravel", "daily", "practice"],
	"license": "MIT",
	"type": "project",
	"require": {
		"laravel/framework": "5.0.*",
		"caffeinated/modules": "~1.2",
		"wikimedia/composer-merge-plugin": "~1.0",
		"codeception/codeception": "~2.0",
		"codeception/phpbuiltinserver": "~1.2"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"Kumuwai\\Daily\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [ 
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"extra": {
	    "merge-plugin": {
	        "include": [
	            "app/Modules/*/composer.json"
	        ]
	    }
	},
	"config": {
		"preferred-install": "dist"
	}
}
